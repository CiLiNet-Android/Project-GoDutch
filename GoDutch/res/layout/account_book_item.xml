<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >
    
    
    <ImageView 
        android:id="@+id/account_book_listview_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    
    <TextView 
        android:id="@+id/account_book_listview_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_toRightOf="@id/account_book_listview_item_icon"
        android:layout_alignTop="@id/account_book_listview_item_icon"
        style="@style/CommonListViewItem" />
    
    <TextView 
        android:id="@+id/account_book_listview_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/account_book_listview_item_name"
        android:layout_toRightOf="@id/account_book_listview_item_icon"
        android:layout_below="@id/account_book_listview_item_name"
        android:textSize="13sp"
        android:textColor="@color/darkgrey" />
    
    <TextView 
        android:id="@+id/account_book_listview_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="13sp"/>

</RelativeLayout>
